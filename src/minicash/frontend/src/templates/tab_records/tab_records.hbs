<div class="panel-buttons" style="position:relative">
  <div data-spec="export-loading" class="loading loading-center"></div>

  <div class="pull-left">
    <button data-spec="start-new-record" type="button" class="btn btn-default">
      <span aria-label="New" class="glyphicon glyphicon-plus"></span>
    </button>

    <button data-spec="delete-record" type="button" class="btn btn-danger" disabled>
      <span aria-label="Delete" class="glyphicon glyphicon-trash"></span>
    </button>

    <button class="btn btn-default" type="button"
            data-toggle="collapse" data-target="#filter_records_{{routeId}}">
      <span aria-label="refresh" class="glyphicon glyphicon-filter"></span>
    </button>
  </div>

  <div style="margin-left:1em;" class="pull-right">
    <button class="btn btn-default" type="button"
            disabled="disabled"
            data-toggle="tooltip" title="{{#tr "Tab options"}}{{/tr}}">
      <span aria-label="refresh" class="glyphicon glyphicon-cog"></span>
    </button>
  </div>

  <br><br>
  <div data-spec="top-paginator-region" class="pull-right"></div>
</div> <!-- panel-buttons -->

