<div id="tab_{{name}}" role="tabpanel" class="tab-pane" >

  <div class="panel-buttons" style="position:relative">
    <div data-spec="export-loading" class="loading loading-center"></div>
    <button data-spec="save" type="button" class="btn btn-default">Save</button>
    <button data-spec="cancel" type="button" class="btn btn-default">Cancel</button>

  </div> <!-- panel-buttons -->

  <div class="panel panel-default"><div class="panel-body">
    <form autocomplete="off" class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          <input name="name" type="text" class="form-control"
                 placeholder="Tag name"
                 value="{{tag.name}}">
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
          <textarea name="description" class="form-control" rows="5" style="resize: none;">{{tag.description}}</textarea>
        </div>
      </div>

      <div class="form-group"
           style="{{#ifndef tag.pk}}display:none;{{/ifndef}}">
        <label class="col-sm-2 control-label">Records count</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" placeholder="{{tag.records_count}}" readonly>
        </div>
      </div>

      {{> components/non_field_errors }}
    </form>
  </div>

  </div>
</div>
