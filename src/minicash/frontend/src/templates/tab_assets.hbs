<div id="tab_{{name}}" role="tabpanel" class="tab-pane" >

  <div class="panel-buttons" style="position:relative">
    <div data-spec="export-loading" class="loading loading-center"></div>
    <button data-spec="new" type="button" class="btn btn-default">New</button>
    <button data-spec="save" type="button" class="btn btn-default hidden">Save</button>
    <button data-spec="cancel" type="button" class="btn btn-default hidden">Cancel</button>

  </div> <!-- panel-buttons -->

  <div class="panel panel-default"><div class="panel-body">
    <form autocomplete="off" class="form-horizontal">

      <div class="form-group">
        <label class="col-sm-2 control-label">Asset</label>
        <div class="col-sm-10">
          <select name="assets" class="form-control" autofocus>
            {{#each assets}}
              <option value="{{id}}" {{#if @first}}selected{{/if}}>{{name}}</option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">Saldo</label>
        <div class="col-sm-10">
          <input name="delta" type="text" class="form-control"
                 placeholder="Initial asset saldo"
                 disabled>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
          <textarea name="description" class="form-control" rows="5" style="resize: none;">{{asset.description}}</textarea>
        </div>
      </div>

    </form>
  </div>

  </div>
</div>
