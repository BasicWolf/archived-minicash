<div class="panel-buttons" style="position:relative">
  <div data-spec="export-loading" class="loading loading-center"></div>

  <!-- Split button -->
  <div class="btn-group">
    <button data-spec="save" type="button" class="btn btn-primary">Save</button>
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="caret"></span>
      <span class="sr-only">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu">
      <li><a data-spec="save-add-similar" href="#">Save and add similar</a></li>
      <li><a data-spec="save-add-another" href="#">Save and add another</a></li>
    </ul>
  </div>

  <button data-spec="cancel" type="button" class="btn btn-default">Cancel</button>

  {{#ifndef recordId}}
  <input data-spec="single-multi" type="checkbox" data-on-color="default" data-off-color="default"
         data-on-text="Single"
         data-off-text="Multi">
  {{/ifndef}}
</div> <!-- panel-buttons -->


<div data-spec="panel-content"></div>
